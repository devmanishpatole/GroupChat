<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WrapContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionContainer" parent="SectionLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParentPadded" parent="MatchParentLayout">
        <item name="android:paddingTop">@dimen/padding_default_top</item>
        <item name="android:paddingBottom">@dimen/padding_default_bottom</item>
        <item name="android:paddingLeft">@dimen/padding_default_left</item>
        <item name="android:paddingRight">@dimen/padding_default_right</item>
    </style>

    <style name="chat_row" parent="SectionContainer">
        <item name="android:padding">@dimen/padding_internal_bigger</item>
        <item name="android:layout_margin">@dimen/padding_internal</item>
    </style>

    <style name="user_name" parent="WrapContentLayout">
        <item name="android:padding">@dimen/padding_internal</item>
        <item name="android:textSize">@dimen/user_name_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="chat_message" parent="WrapContentLayout">
        <item name="android:padding">@dimen/padding_internal_bigger</item>
        <item name="android:layout_marginTop">@dimen/padding_internal</item>
        <item name="android:textSize">@dimen/chat_text_size</item>
    </style>

    <style name="chat_list" parent="MatchParentLayout">
        <item name="divider">@android:color/transparent</item>
        <item name="android:stackFromBottom">true</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>

    <style name="chat_edit_text" parent="WrapContentLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
